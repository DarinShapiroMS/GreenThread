{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--jobs",
                "16",
                "--fqbn",
                "SiliconLabs:silabs:nano_matter",
                "--port",
                "COM5",
                "--output-dir",
                "${workspaceFolder}/build",
                "${workspaceFolder}/Green_Thread.ino"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "upload",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "upload",
                "--fqbn",
                "SiliconLabs:silabs:nano_matter",
                "--port",
                "COM5",
                "--input-dir",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
