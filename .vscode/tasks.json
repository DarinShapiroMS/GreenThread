{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--jobs",
                "16", // Adjust the number of jobs based on your system's capabilities
                "--fqbn",
                "SiliconLabs:silabs:nano_matter", // Change this to your board
                "--port",
                "COM5",
                "--output-dir",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "upload",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "upload",
                "--fqbn",
                "SiliconLabs:silabs:nano_matter", // Change this to your board
                "--port",
                "COM5",
                "--input-dir",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}